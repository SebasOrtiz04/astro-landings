---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: #c5b16e;
    --aw-color-secondary:#151f28;
    --aw-color-accent: #d3d5d7;

    --aw-color-text-heading: #151f28;
    --aw-color-text-default: #151f28;
    --aw-color-text-muted: #4f4519;
    --aw-color-bg-page: #fefdfd;

    --aw-color-bg-page-dark: #151f28;

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: #c5b16e;
    --aw-color-secondary: #151f28;
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: #fefdfd;
    --aw-color-text-default: #d3d5d7;
    --aw-color-text-muted: #a28d23;
    --aw-color-bg-page: #151f28;

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
