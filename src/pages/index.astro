---
import Layout from '~/layouts/Layout.astro';

import Hero from '~/components/widgets/Hero.astro';
import rampaImg from '~/assets/images/rampa.jpg';

const metadata = {
  title: 'Renta de inflables',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    tagline="Renta de inflables"
    title="¡Rentame para tus fiestas!"
    subtitle="Renta este divertido inflable de 6m x 4m a tan solo $850.00 MXN."
    actions={[
      { variant: 'primary', text: 'Contáctanos', href: '#', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Learn more', href: '#' },
    ]}
    image={{
      src: rampaImg,
      alt: 'Inflable Rampa',
    }}
  />
</Layout>
